<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_daily"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/tv_daily_judul"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@id/iv_daily"
        android:layout_toRightOf="@id/iv_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belajar"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tv_daily_deskripsi"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@id/iv_daily"
        android:layout_toRightOf="@id/iv_daily"
        android:layout_below="@id/tv_daily_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deskripsi_belajar"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tv_daily_waktu"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:layout_toEndOf="@id/iv_daily"
        android:layout_toRightOf="@id/iv_daily"
        android:layout_below="@id/tv_daily_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_av_timer_black_24dp"
        android:drawablePadding="5dp"
        android:text="08.00"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"/>

</RelativeLayout>